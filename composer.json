    "type": "library",
    "description": "Wiggum services package (router, DB, upload, etc).",
    "license": "Apache-2.0",
	"require" : {
        "php": "^8.2",
        "ext-json": "*",
        "ext-pdo": "*",
		"nikic/fast-route" : "^1.0",
		"intervention/image" : "^2.0",
        "league/flysystem": "^3.0",
        "psr/log": "3.*",
		"league/flysystem-aws-s3-v3": "^3.0"
	},
	"require-dev": {
